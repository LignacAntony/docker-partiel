{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .todo-table {
            width: 100%;
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 0.9em;
            font-family: sans-serif;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }
        .todo-table thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
        }
        .todo-table th,
        .todo-table td {
            padding: 12px 15px;
        }
        .todo-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }
        .todo-table tbody tr:nth-of-type(even) {
            background-color: #f3f3f3;
        }
        .todo-table tbody tr:last-of-type {
            border-bottom: 2px solid #009879;
        }
        .status-badge {
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.8em;
            font-weight: bold;
        }
        .status-a-faire { background-color: #ffd700; }
        .status-en-cours { background-color: #87ceeb; }
        .status-termine { background-color: #90ee90; }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        h1 {
            color: #009879;
            text-align: center;
            margin-bottom: 30px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des tâches</h1>
        <table class="todo-table">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Statut</th>
                    <th>Date de création</th>
                    <th>Date d'échéance</th>
                </tr>
            </thead>
            <tbody>
                {% for todo in todos %}
                    <tr>
                        <td>{{ todo.title }}</td>
                        <td>{{ todo.description }}</td>
                        <td>
                            <span class="status-badge status-{{ todo.status|replace({' ': '-'}) }}">
                                {{ todo.status }}
                            </span>
                        </td>
                        <td>{{ todo.createdAt|date('d/m/Y H:i') }}</td>
                        <td>{{ todo.dueDate|date('d/m/Y') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %} 